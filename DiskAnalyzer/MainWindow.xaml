<Window x:Class="DiskAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiskAnalyzer"
        xmlns:vm="clr-namespace:DiskAnalyzer.ViewModels"
        mc:Ignorable="d"
        Title="磁盘分析器" Height="600" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Top Toolbar -->
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Vertical" Margin="5">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="驱动器:" VerticalAlignment="Center" Margin="5,0"/>
                <ComboBox ItemsSource="{Binding Drives}" SelectedItem="{Binding SelectedDrive}" DisplayMemberPath="Name" Width="80" Margin="5,0"/>
                
                <TextBlock Text="路径:" VerticalAlignment="Center" Margin="10,0,5,0"/>
                <TextBox Text="{Binding SelectedPath, UpdateSourceTrigger=PropertyChanged}" Width="300" VerticalAlignment="Center" Margin="5,0" VerticalContentAlignment="Center"/>
                <Button Content="..." Command="{Binding SelectDirectoryCommand}" Width="30" Margin="0,0,10,0"/>

                <Button Content="开始扫描" Command="{Binding StartScanCommand}" Margin="5" Padding="10,5"/>
                <Button Content="暂停" Command="{Binding PauseScanCommand}" Margin="5" Padding="10,5"/>
                <Button Content="继续" Command="{Binding ResumeScanCommand}" Margin="5" Padding="10,5"/>
                <Button Content="取消" Command="{Binding CancelScanCommand}" Margin="5" Padding="10,5"/>
            </StackPanel>
            
            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" Margin="5,2" FontWeight="Bold">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ErrorMessage}" Value="">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ErrorMessage}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
            <TextBlock Text="{Binding CurrentPath}" Margin="5,2" TextTrimming="CharacterEllipsis" MaxWidth="800" Foreground="Gray"/>
        </StackPanel>
        <ProgressBar Grid.Row="0" Grid.ColumnSpan="2" Height="4" VerticalAlignment="Bottom" IsIndeterminate="{Binding IsScanning}"/>

        <!-- Left Filter Panel -->
        <StackPanel Grid.Row="1" Grid.Column="0" Margin="10">
            <GroupBox Header="文件大小阈值 (MB)">
                <StackPanel Margin="5">
                    <Slider Minimum="100" Maximum="5000" Value="{Binding SizeThresholdMB}" TickFrequency="100" IsSnapToTickEnabled="True"/>
                    <TextBlock Text="{Binding SizeThresholdMB, StringFormat={}{0:N0} MB}" HorizontalAlignment="Center"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="安全等级" Margin="0,10">
                <StackPanel Margin="5">
                    <CheckBox Content="不可删 (系统文件)" IsChecked="{Binding ShowUnsafe}" Margin="0,2"/>
                    <CheckBox Content="可删 (用户文件)" IsChecked="{Binding ShowSafe}" Margin="0,2"/>
                    <CheckBox Content="未知" IsChecked="{Binding ShowUnknown}" Margin="0,2"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="扩展名过滤">
                <StackPanel Margin="5">
                    <TextBox Text="{Binding ExtensionFilterText, UpdateSourceTrigger=PropertyChanged}" Padding="2"/>
                    <TextBlock Text="例如 .mp4" Foreground="Gray" FontStyle="Italic"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <!-- Main DataGrid -->
        <DataGrid Grid.Row="1" Grid.Column="1" Margin="5"
                  ItemsSource="{Binding FilteredResults}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  SelectionMode="Extended"
                  Name="ResultsGrid">
            <DataGrid.Columns>
                <DataGridTextColumn Header="路径" Binding="{Binding FullPath}" Width="*"/>
                <DataGridTextColumn Header="大小" Binding="{Binding SizeFormatted}" Width="100"/>
                <DataGridTextColumn Header="类型" Binding="{Binding Ext}" Width="60"/>
                <DataGridTextColumn Header="修改时间" Binding="{Binding LastWrite}" Width="140"/>
                <DataGridTextColumn Header="安全等级" Binding="{Binding SafetyLevelText}" Width="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SafetyLevel}" Value="0">
                                    <Setter Property="Foreground" Value="Red"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding SafetyLevel}" Value="1">
                                    <Setter Property="Foreground" Value="Green"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding SafetyLevel}" Value="2">
                                    <Setter Property="Foreground" Value="Orange"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Bottom Actions -->
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <TextBlock Text="{Binding FilteredResults.Count, StringFormat=总文件数: {0}}" VerticalAlignment="Center" Margin="10"/>
            <Button Content="导出 CSV" Command="{Binding ExportCommand}" Margin="5" Padding="10,5"/>
            <Button Content="删除选中" Command="{Binding DeleteCommand}" CommandParameter="{Binding SelectedItems, ElementName=ResultsGrid}" Margin="5" Padding="10,5"/>
        </StackPanel>
    </Grid>
</Window>
